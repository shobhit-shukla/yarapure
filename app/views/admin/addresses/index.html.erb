<p id="notice"><%= notice %></p>

<h1>Listing Admin Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>Zip code</th>
      <th>Active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_addresses.each do |admin_address| %>
      <tr>
        <td><%= admin_address.address1 %></td>
        <td><%= admin_address.address2 %></td>
        <td><%= admin_address.city_id %></td>
        <td><%= admin_address.zip_code %></td>
        <td><%= admin_address.active %></td>
        <td><%= admin_address.user_id %></td>
        <td><%= link_to 'Show', admin_address %></td>
        <td><%= link_to 'Edit', edit_admin_address_path(admin_address) %></td>
        <td><%= link_to 'Destroy', admin_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

