<div class="main_container">
  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">

      <div class="navbar nav_title" style="border: 0;">
        <a href="index.html" class="site_title"><i class="fa fa-tint"></i> <span>YaraSol</span></a>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%= image_tag "user.png", :class => "img-circle profile_img"  %>
        </div>
        <div class="profile_info">
          <span>Welcome,</span>
          <h2><%= current_user.full_name.upcase %></h2>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section">
          <h3>General</h3>
          <ul class="nav side-menu">
            <li><a><i class="fa fa-dashboard"></i> Dashboard <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Dashboard', admin_path %>
                </li>
              </ul>
            </li>
            <li><a><i class="fa fa-user"></i> Users <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Customers', admin_customers_path %></li>
                <li><%= link_to 'Employees', admin_employees_path %></li>
                <!-- <li><%#= link_to 'Admins', admin_customers_path %></li> -->
              </ul>
            </li>
            <li><a><i class="fa fa-barcode"></i> Orders <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'New Order', new_order_path %></li>
                <li><%= link_to 'Orders List', orders_path %></li>
                <!-- <li><%#= link_to 'Admins', admin_customers_path %></li> -->
              </ul>
            </li>
            <li><a><i class="fa fa-cog"></i> Settings <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Plans', plans_path %></li>
                <li><%= link_to 'States', states_path %></li>
                <li><%= link_to 'Cities', cities_path %></li>
              </ul>
            </li>
            <li><a><i class="fa fa-shopping-cart"></i> Products & Services <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Products', products_path %></li>
                <li><%= link_to 'Brands', brands_path %></li>
              </ul>
            </li>
            <li><a><i class="fa fa-book"></i>Entries <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Entries', entries_path %></li>
                <li><%= link_to 'New Entry', new_entry_path %></li>
              </ul>
            </li>
            <li><a><i class="fa fa-money"></i>Payment <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Payments', payments_path %></li>
                <li><%= link_to 'New Payment', new_payment_path %></li>
              </ul>
            </li>
            <li><a><i class="fa fa-truck"></i>Transport <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Trips', trips_path %></li>
                <li><%= link_to 'Vehicles', vehicles_path %></li>
              </ul>
            </li>
          </ul>
        </div>

      </div>
      <!-- /sidebar menu -->

     <%= render 'partials/menu_footer' %>
    </div>
  </div>
</div>
