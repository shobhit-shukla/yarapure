<p id="notice"><%= notice %></p>

<h2 class="x_title">Brands</h2>

<div class="x_content">
<%= link_to 'New Brand', new_brand_path, class: 'btn btn-success' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand, class: 'btn btn-primary btn-sm'  %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand), class: 'btn btn-info btn-sm'  %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
