<div class="row">
<%= simple_form_for(@order, html: { class: 'form-horizontal' }) do |f| %>
  <div class="col-md-6">
    <!-- Personal Info -->
	  <span class="section">Personal Information</span>
	  <%= f.input :first_name %>
	  <%= f.input :middle_name %>
	  <%= f.input :last_name %>
	  <%= f.input :phone, label: 'Mobile Number' %>
	  <%= f.input :secondary_phone, label: 'Alternate Number' %>

	  <!-- Address Fields -->
	  <span class="section">Address</span>
	  <div id="addresses">
		  <%= f.simple_fields_for :addresses do |address| %>
		    <%= render 'admin/users/address_fields', f: address %>
		  <% end %>	
		</div>
	</div>
	
	<div class="col-md-6">	
		<!-- Customer Detail Fields -->
		<div id="customer_details">
	  	<%= f.simple_fields_for :customer_details do |detail| %>
				<span class="section">Order Details</span>
				<%= render 'customer_detail_fields', f: detail %>
				<div class="links">
      		<%= link_to_add_association 'add order', f, :customer_details %>
      	</div>
			<% end %>
    </div>
  </div>  
  <%= f.button :submit_cancel, 'Save', cancel: orders_path %>
<% end %>
</div>
