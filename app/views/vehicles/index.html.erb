<p id="notice"><%= notice %></p>

<h2 class="x_title">Vehicles</h2>

<div class="x_content">
  <%= link_to 'New Vehicle', new_vehicle_path, class: 'btn btn-success' %>

  <table class="table table-responsive">
    <thead>
      <tr>
        <th>Registration no</th>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.registration_no %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.make %></td>
          <td><%= vehicle.model %></td>
          <td><%= link_to 'Show', vehicle, class: 'btn btn-sm btn-primary' %></td>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: 'btn btn-sm btn-info' %></td>
          <td><%= link_to 'Delete', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>