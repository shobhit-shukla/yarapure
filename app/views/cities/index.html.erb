<p id="notice"><%= notice %></p>

<h2 class="x_title">Cities</h2>

<div class="x_content">
  <%= link_to 'New City', new_city_path, class: 'btn btn-success' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Abbreviation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.state.name %></td>
          <td><%= city.abbreviation %></td>
          <td><%= link_to 'Show', city, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_city_path(city), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Delete', city, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

