<p id="notice"><%= notice %></p>

<h2 class="x_title">Entries</h2>

<div class="x_content">
  <%= link_to 'New Entry', new_entry_path, class: 'btn btn-success'  %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Rate</th>
      <th>No of jars</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.user.full_name %></td>
        <td><%= entry.product.name %></td>
        <td><%= entry.rate %></td>
        <td><%= entry.no_of_jars %></td>
        <td><%= entry.amount %></td>
        <td><%= link_to 'Show', entry, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


