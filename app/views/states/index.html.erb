<p id="notice"><%= notice %></p>

<h2 class="x_title">States</h2>
<div class="x_content">
  <%= link_to 'New State', new_state_path, class: 'btn btn-success' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Abbreviation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= state.name %></td>
          <td><%= state.country_id %></td>
          <td><%= state.abbreviation %></td>
          <td><%= link_to 'Show', state, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_state_path(state), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Delete', state, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

