<p id="notice"><%= notice %></p>

<h2 class="x_title">Plans</h2>

<div class="x_content">
  <%= link_to 'New Plan', new_plan_path, class: 'btn btn-success' %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @plans.each do |plan| %>
        <tr>
          <td><%= plan.name %></td>
          <td><%= plan.start_date %></td>
          <td><%= plan.end_date %></td>
          <td><%= link_to 'Show', plan, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_plan_path(plan), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
